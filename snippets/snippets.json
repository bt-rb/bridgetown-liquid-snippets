{
	"Bridgetown: Class Map": {
    "prefix": "btcm",
    "body": ["{% class_map $1: $2 %}"],
    "description": "Bridgetown: Class Map"
  },
  "Bridgetown: Component Block": {
    "prefix": "btcb",
    "body": [
      "{% rendercontent \"$1\" %}",
      "  $2",
      "{% endrendercontent %}$0",
      ""
    ],
    "description": "Bridgetown: Component Block"
  },
  "Bridgetown: Component": {
    "prefix": "btc",
    "body": [
      "{% render \"${1:component}\", metadata: ${2:site.metadata} %}"
    ],
    "description": "Bridgetown: Component"
  },
	"Bridgetown: Component Front Matter": {
    "prefix": "btcfm",
    "body": [
      "---",
      "name: ${1:name}",
      "description: ${2:description}",
      "variables:",
      "  ${3:variable}:",
      "    - ${4:variablename}",
      "    - ${5:variabledescription}",
      "  ${6:optional}?: object",
      "  content: markdown",
      "---",
      "",
      "${0:content}"
    ],
    "description": "Bridgetown: Render"
	},
	"Bridgetown: Date Filter": {
    "prefix": "btdf",
    "body": ["{{ $1 | date_to_long_string }}"],
    "description": "Bridgetown: Date Filter"
  },
  "Bridgetown: Find One": {
    "prefix": "btft",
    "body": [
      "{% find ${1:item} in ${2:collection}, ${3:expressions} %}"
    ],
    "description": "Bridgetown: Find One"
  },
  "Bridgetown: Find Multiple": {
    "prefix": "btft*",
    "body": [
      "{% find ${1:item} where ${2:collection}, ${3:expressions} %}"
    ],
    "description": "Bridgetown: Find One"
  },
  "Bridgetown: If Statement": {
    "prefix": "btif",
    "body": [
      "",
      "{% if ${1:condition} %}",
      "  ${2:action}",
      "{% endif %}"
    ],
    "description": "Bridgetown: If Statement"
  },
  "Bridgetown: Markdownify": {
    "prefix": "btmd",
    "body": [
      "{{ ${1:md_format_string} | markdownify }}"
    ],
    "description": "Convert a Markdown-formatted string into HTML."
  },
	"Bridgetown: Reading Time Filter": {
    "prefix": "btrtf",
    "body": ["{{ page.content | reading_time }}"],
    "description": "Bridgetown: Reading Time Filter"
  },
  "Bridgetown: Smartify": {
    "prefix": "btmsmart",
    "body": [
      "{{ ${1:quotes} | smartify }}"
    ],
    "description": "Convert \"quotes\" into “smart quotes.”"
  },
	"Bridgetown: SVG": {
		"prefix": "btsvg",
		"body": ["{% svg images/$1.svg class=\"$2\" %}"],
		"description": "Bridgetown: SVG"
  },
  "Bridgetown: Syntax Highlighting": {
    "prefix": "btsh",
    "body": [
      "{% highlight ${1:language} %}",
      "${2:content to be highlighted}",
      "{% endhighlight %}"
    ],
    "description": "Bridgetown has built in support for syntax highlighting of over 100 languages"
  },
	"Bridgetown: Titleize Filter": {
    "prefix": "bttf",
    "body": ["{{ $1 | titleize }}$0"],
    "description": "Bridgetown: Titleize Filter"
  },
  "Bridgetown: Truncate": {
    "prefix": "bttrunc",
    "body": [
      "",
      "{{ \"${1:string_to_truncate}\" | truncate: ${2:num_of_chars}, \"${3:cstm_ellip_or_no(\"\")_ellip}\" }}"
    ],
    "description": "Bridgetown: Truncate"
  },
  "Bridgetown: Variable Assign": {
    "prefix": "btva",
    "body": [
      "",
      "{% assign ${1:variable_name} = $2 %}"
    ],
    "description": "Bridgetown: Variable Assign"
  },
  "Bridgetown: Variable Output": {
    "prefix": "btvo",
    "body": ["{{ $1 }}$0"],
    "description": "Bridgetown: Liquid Variable"
	},
  "Bridgetown: With Block": {
    "prefix": "btwb",
    "body": ["{% with $1 %}", "  $2", "{% endwith %}$0", ""],
    "description": "Bridgetown: With Block"
	},
  "Bridgetown: Word Count Filter": {
    "prefix": "btwcf",
    "body": ["{{ page.content | number_of_words }}"],
    "description": "Bridgetown: Word Count Filter"
  }
}